<!--pages/register/register.wxml-->
<view class='container'>
  <form bindsubmit="formSubmit" bindreset="formReset">
    <van-cell-group>
      <van-field
        name="realname"
        value="{{ realname }}"
        label="真实姓名"
        placeholder="请输入真实姓名"
        clearable
        required
      />
      <van-field
        name="school"
        value="{{ school }}"
        label="学校"
        placeholder="请输入您的学校"
        clearable
        required
      />
    </van-cell-group>
   
    <button class='confirm-btn' form-type="submit">提交</button>

  </form>
</view>